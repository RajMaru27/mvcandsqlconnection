@using System.Data;
@model MVCandSQLCONNECTION.Models.StudentsList
@{
    ViewBag.Title = "Listing";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<a href="@Url.Action("Index")" class="btn btn-primary">Add</a>
<br />
@TempData["Edit"]
<br />
@TempData["Delete"]
<br />
@TempData["Add"]
<br />


<main>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    Student Name
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    Birthdate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var S in Model.Slist)
            {
                <tr>
                    <td>
                        @S.StudentName
                    </td>
                    <td>
                        @S.Email
                    </td>
                    <td>
                        @S.Birthdate
                    </td>
                    <td><a href="@Url.Action("Delete", new {Id = S.StudentsId})"> Delete </a></td>
                    <td><a href="@Url.Action("Edit", new {Id = S.StudentsId})"> Edit </a></td>
                </tr>
            }
        </tbody>
    </table>
</main>