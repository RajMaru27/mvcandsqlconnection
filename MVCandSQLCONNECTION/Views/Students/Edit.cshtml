@model MVCandSQLCONNECTION.Models.StudentsDetail
@using System.Data;
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Students", FormMethod.Post))
{
    @Html.HiddenFor(x => x.StudentsId)
    <br />
    @Html.LabelFor(x => x.StudentName)
    @Html.TextBoxFor(x => x.StudentName)
    <br />
    @Html.LabelFor(x => x.Email)
    @Html.TextBoxFor(x => x.Email)
    <br />
    @Html.LabelFor(x => x.Birthdate)
    @Html.TextBoxFor(x => x.Birthdate)
    <br />
    <input type="submit"value="submit" />
}

